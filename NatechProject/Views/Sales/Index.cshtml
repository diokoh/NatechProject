@model IEnumerable<NatechProject.Models.Sale>

@{
    ViewData["Title"] = "Sales";
}

<h1>Sales</h1>

<p>
    <a asp-action="Create" class="customButton">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesman)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.SalePrice) €
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salesman.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaleId" class="customButton">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.SaleId" class="customButton">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.SaleId" class="customButton">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
