@model NatechProject.Models.Salesman

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Salesman</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>Month</th>
                <th>Total Sales</th>
                <th>Total Commission</th>
            </tr>
        </thead>
        <tbody>
            @foreach(MonthSales ms in Model.monthSales){
            <tr>
                <td>@ms.Month</td>
                    <td>@ms.TotalSales €</td>
                    <td>@ms.TotalCommission €</td>
            </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SalesmanId" class="customButton">Edit</a> 
    <a asp-action="Index" class="customButton">Back to List</a>
</div>
